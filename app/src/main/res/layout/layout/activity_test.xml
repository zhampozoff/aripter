<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="alphabetapp.fit.enu.kz.alphabetapp.ActivityTest"
    android:background="@color/colorback">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_marginBottom="20dp">


        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="Тестілеу"
            android:fontFamily="New Times Roman"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/text_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:text="Score"
            android:textSize="20sp" />

    </RelativeLayout>

    <TextView
        android:id="@+id/text_question"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/test_q"
        android:text="Score"
        android:gravity="center"
        android:textSize="20sp" />

    <Button
        android:id="@+id/choice1"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:background="@drawable/button_b"
        android:padding="8dp"
        android:drawableRight="@drawable/abut1"/>
    <Button
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:background="@drawable/button_b"
        android:layout_marginBottom="20dp"
        android:id="@+id/choice2"
        android:drawableRight="@drawable/bbut1"/>
    <Button
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/button_b"
        android:id="@+id/choice3"
        android:drawableRight="@drawable/cbut1"/>
    <Button
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:background="@drawable/button_b"
        android:layout_marginBottom="20dp"
        android:id="@+id/choice4"
        android:drawableRight="@drawable/dbut1"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btnbck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:text="Кері"
            android:drawableLeft="@drawable/bck"/>

        <Button
            android:id="@+id/btnfwrd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:text="Алға"
            android:drawableRight="@drawable/fwrd"/>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/btnbck"
            android:layout_alignBottom="@+id/btnbck"
            android:layout_centerHorizontal="true"
            android:text="00:00:00"
            android:textSize="20sp" />

    </RelativeLayout>

</LinearLayout>
