<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="alphabetapp.fit.enu.kz.alphabetapp.ActivitySettings">

    <TextView
        android:id="@+id/textSize"
        android:layout_width="152dp"
        android:layout_height="28dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textColor"
        android:layout_marginTop="44dp"
        android:text="@string/textSizeString"
        tools:layout_editor_absoluteX="25dp"
        tools:layout_editor_absoluteY="82dp" />

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="147dp"
        android:layout_height="38dp"
        android:layout_alignEnd="@+id/spinner"
        android:layout_alignTop="@+id/textSize"
        android:max="50"
        android:min="25"
        android:progress="5"
        tools:layout_editor_absoluteX="205dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="77dp" />

    <TextView
        android:id="@+id/textColor"
        android:layout_width="144dp"
        android:layout_height="33dp"
        android:layout_alignBottom="@+id/spinner"
        android:layout_alignParentStart="true"
        android:layout_marginStart="35dp"
        android:text="@string/btnColorString"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="160dp" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="150dp"
        android:layout_height="41dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/seekBar"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="180dp"
        tools:layout_editor_absoluteX="202dp"
        tools:layout_editor_absoluteY="148dp" />

    <Button
        android:id="@+id/btnSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="22dp"
        android:text="@string/btnSave" />

    <TextView
        android:id="@+id/progressRate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/seekBar"
        android:layout_below="@+id/seekBar"
        android:layout_marginEnd="13dp"
        android:text="" />

</RelativeLayout>
