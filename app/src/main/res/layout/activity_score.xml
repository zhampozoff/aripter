<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="alphabetapp.fit.enu.kz.alphabetapp.ActivityScore">

    <TextView
        android:id="@+id/yourScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="155dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:text="Сіздің" />

    <TextView
        android:id="@+id/highestScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/yourScore"
        android:layout_below="@+id/yourScore"
        android:layout_marginTop="87dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:text="Ең жоғарғы" />

    <Button
        android:id="@+id/buttonOk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/highestScore"
        android:layout_marginBottom="58dp"
        android:text="@string/btnSave" />
</RelativeLayout>
